<html lang="en">

<head>
    <%- include('partials/bootstrap-css.ejs') -%>
        <title>Author</title>
</head>

<body>
    <%- include('partials/header') -%>

        <div class="container my-5">
            <h5>List Author</h5>
            <table class="table table-striped table-hover">
                <thead>
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Gender</th>
                </thead>
                <tbody>
                    <% let i=1; author.forEach(function(author) { %>
                        <tr>
                            <td>
                                <%- i -%>
                            </td>
                            <td>
                                <%- author.name -%>
                            </td>
                            <td>
                                <%- author.age -%>
                            </td>
                            <td>
                                <%- author.gender -%>
                            </td>
                        </tr>
                        <% i++; }) %>
                </tbody>
            </table>
        </div>
        <%- include('partials/bootstrap-js.ejs') -%>
</body>

</html>