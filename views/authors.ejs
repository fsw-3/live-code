<%- include('./layouts/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card mt-5">
                    <div class="card-header bg-info">
                        <h5>Authors</h5>
                    </div>
                    <div class="card-body">
                        <div class="btn-group">
                            <a href="#" class="btn btn-success btn-sm"><strong>+ Add Author</strong></a>
                        </div>
                        <div class="m-3">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Age</th>
                                        <th scope="col">Gender</th>
                                        <th scope="col">Jumlah Buku</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let i=1; authors.forEach( author => { %>
                                    <tr>
                                        <td><%= i %> </td>
                                        <td><%= author.name %> </td>
                                        <td><%= author.age %> </td>
                                        <td><%= author.gender %> </td>
                                        <td>-</td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="#" class="btn btn-warning btn-sm">Update</a>
                                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% i++; }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('./layouts/footer.ejs') %>