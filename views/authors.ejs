<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Live Code</title>
</head>
<body>
    <section id="navbar">
        <%- include('partials/header') %>
    </section>
    <section id="main">
        <div class="container py-4">
            <h1 class="text-center mb-4">Author List</h1>
            <table class="table table-hover" style="border: 2px solid;">
                <thead class="text-light bg-dark text-center">
                    <th>No</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Book Total</th>
                </thead>
                <% authors.forEach(function(author) { %>
                    <tbody class="text-center">
                        <td><%= author.id %></td>
                        <td style="text-align: left !important;"><%= author.name %></td>
                        <td><%= author.age %></td>
                        <td><%= author.gender %></td>
                        <td></td>
                    </tbody>
                <% }) %>
            </table>
        </div>
    </section>
    <section id="footer">
        <%- include('partials/footer') %>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>