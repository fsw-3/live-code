<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Live Code</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <section id="navbar">
        <%- include('partials/header') %>
    </section>
    <section id="main">
        <h1 class="text-center pt-4">Form Book Edit</h1>
        <div class="container d-flex justify-content-center pt-3 pb-5">
            <form action="/books/restock/<%= books.id %>" method="post">
                <table class="table table-borderless bg-white">
                    <tr>
                        <td><label class="text-input" for="title">Title</label></td>
                        <td><input class="box-input" type="text" name="title" value="<%= books.title %>"></td>
                    </tr>
                    <tr>
                        <td><label class="text-input" for="isbn">ISBN</label></td>
                        <td><input class="box-input" type="text" name="isbn" value="<%= books.isbn %>"></td>
                    </tr>
                    <tr>
                        <td><label class="text-input" for="stock">Stock</label></td>
                        <td><input class="box-input" type="text" name="stock" value="<%= books.stock %>"></td>
                    </tr>
                    <tr>
                        <td><label class="text-input" for="price">Price</label></td>
                        <td><input class="box-input" type="text" name="price" value="<%= books.price %>"></td>
                    </tr>
                    <tr>
                        <td><label class="text-input" for="AuthorId">Author</label></td>
                        <td><select class="box-input" name="AuthorId" id="AuthorId">
                            <option value="1" <%= books.AuthorId === 1 ? 'selected' : '' %>>J. K. Rowling</option>
                            <option value="2" <%= books.AuthorId === 2 ? 'selected' : '' %>>George R. R. Martin</option>
                            <option value="3" <%= books.AuthorId === 3 ? 'selected' : '' %>>Suzanne Collins</option>
                            <option value="4" <%= books.AuthorId === 4 ? 'selected' : '' %>>James Dashner</option>
                        </select></td>
                    </tr>
                </table>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-danger mx-2" type="reset">Cancel</button>
                    <button class="btn btn-success mx-2" type="submit">Save</button>
                </div>
            </form>
        </div>
    </section>
    <section id="footer">
        <%- include('partials/footer') %>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>