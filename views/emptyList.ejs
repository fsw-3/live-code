<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Live Code</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <section id="navbar">
        <%- include('partials/header') %>
    </section>
    <section id="main">
        <div class="container py-4">
            <h1 class="text-center mb-4">Books List Empty Stock</h1>
            <table class="table table-hover" style="border: 2px solid;">
                <thead class="text-light bg-dark text-center">
                    <th>No</th>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Author Id</th>
                    <th>Action</th>
                </thead>
                <% let i=1; %>
                <% books.forEach(function(book) { %>
                <tbody class="text-center">
                    <% if(book.stock == 0) { %>
                    <td><%= i; %> <%! i++; %></td>
                    <td style="text-align: left !important;"><%= book.title %></td>
                    <td><%= book.isbn %></td>
                    <td><%= book.price %></td>
                    <td><%= book.stock %></td>
                    <td><%= book.AuthorId %></td>
                    <td>
                        <a href="/books/restock/<%= book.id %>"><button class="btn btn-success" type="button">Edit</button></a>
                        <a href="/books/delete/<%= book.id %>"><button class="btn btn-danger" type="button" id="delete">Delete</button></a>
                    </td>
                    <% } %>
                </tbody>
                <% }) %>
            </table>
        </div>
        <div class="container d-flex flex-column align-items-center pb-5">
            <div class="bg-secondary text-center rounded-3 pt-2 px-3 mb-3" style="width: max-content; height: 38px;">
               <a href="/books" class="text-decoration-none text-light"><h6>View Books Ready Stock</h6></a>
            </div>
            <div class="bg-secondary text-center rounded-3 pt-2 px-3" style="width: max-content; height: 38px;">
                <a href="/books/add" class="text-decoration-none text-light"><h6>Add Book</h6></a>
             </div>
        </div>
    </section>
    <section id="footer">
        <%- include('partials/footer') %>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>