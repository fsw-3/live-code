<%- include('./layouts/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mt-5">
                <div class="card-header bg-success">
                    <h4>Books</h4>
                </div>
                <div class="card-body">
                    <div class="btn-group">
                        <a href="#" class="btn btn-success btn-sm rounded-2 m-1"><strong>+ Add Book</strong></a>
                    </div>
                     <table class="table">
                         <thead>
                             <tr>
                                 <th scope="col">No</th>
                                 <th scope="col">Title</th>
                                 <th scope="col">ISBN</th>
                                 <th scope="col">Stock</th>
                                 <th scope="col">Price</th>
                                 <th scope="col">Author</th>
                                 <th scope="col">Action</th>
                             </tr>
                         </thead>
                         <tbody>
                             <% let i=1; books.forEach( book => { %>
                             <tr>
                                 <td><%= i %></td>
                                 <td><%= book.title %> </td>
                                 <td><%= book.isbn %> </td>
                                 <td><%= book.stock %> </td>
                                 <td><%= book.price %> </td>
                                 <td><%= book.Author.name %> </td>
                                 <td>
                                     <div class="btn-group">
                                         <a href="#" class="btn btn-primary btn-sm">Buy</a>
                                         <a href="#" class="btn btn-warning btn-sm">Update</a>
                                         <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                     </div>
                                 </td>
                             </tr>
                             <% i++; }); %>
                         </tbody>
                     </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./layouts/footer') %>